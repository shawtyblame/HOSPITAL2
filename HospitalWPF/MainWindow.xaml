<Window x:Class="HospitalWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HospitalWPF"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Login" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label FontSize="25" Margin="189,47,525,33">Login</Label>
        <TextBox x:Name="loginBlock" FontSize="30" Grid.Row="0" BorderBrush="Gray" BorderThickness="5"
                 Width="250" Height="50"/>
        <Label FontSize="25" Margin="130,47,530,23" Grid.Row="1" RenderTransformOrigin="0.309,0.47">Password</Label>
        <TextBox x:Name="passwordBlock" FontSize="30" Grid.Row="1" BorderBrush="Gray" BorderThickness="5"
                 Width="250" Height="50"/>
        <Button Click="Button_Click" Grid.Row="2" Width="250" FontSize="20"  Height="50">Войти</Button>
    </Grid>
</Window>
